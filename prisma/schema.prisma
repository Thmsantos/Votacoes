generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Candidate {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  votes     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Votes {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
}

model User{
  id        Int      @id @default(autoincrement())
  username  String
  createdAt DateTime @default(now()) 
  updatedAt DateTime @default(now())
}