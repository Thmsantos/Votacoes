generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Candidate {
  id         Int       @id @default(autoincrement())
  name       String
  votes      Int
  electionId Int
  election   Elections @relation(fields: [electionId], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())

  @@unique([name, electionId])
}

model Votes {
  id        Int      @id @default(autoincrement())
  name      String
  electionId Int
  createdAt DateTime @default(now())
}

model User {
  id        Int         @id @default(autoincrement())
  username  String
  password  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @default(now())
  elections Elections[]
}

model Elections {
  id          Int         @id @default(autoincrement())
  name        String
  key         String
  adminUserId Int
  adminUser   User        @relation(fields: [adminUserId], references: [id])
  candidates  Candidate[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @default(now())
}
